<!--This is used for GLAccount Create scenario if there are multiple Cost Element in the CR. The Cost Elements are showed in a table with navigation.
At runtime, this is loaded in GLAccountCreate.js.-->
<core:FragmentDefinition
	xmlns:sap.ui.layout.form="sap.ui.layout.form" xmlns:sap.ui.layout="sap.ui.layout"
	xmlns:sap.ui.core="sap.ui.core" xmlns:core="sap.ui.core" xmlns="sap.m">
	 
   <Table id="glCostElTab" 
			class="table_padding headerBold" width="100%">
			<columns>
			<Column id="glcolCOA">
				<header>
					<Label text="{i18n>GL_COA}">
					</Label>
				</header>
			</Column>
			<Column id="glcolCostEl" hAlign="Center">
				<header>
					<Label text="{i18n>GL_COST_EL}">
					</Label>
				</header>
			</Column>
			<Column id="glcolFunArea">
				<header>
					<Label text="{i18n>GL_FUNC_AREA}">
					</Label>
				</header>
			</Column>
			<Column id="glcolCostElCategory" hAlign="Center">
				<header>
					<Label text="{i18n>GL_COST_EL_CATEGORY}">
					</Label>
				</header>
			</Column>
			<!-- Extends the column of a description table -->
			<core:ExtensionPoint name="extglCostElTab" />
			</columns>
			</Table> 
		
</core:FragmentDefinition>