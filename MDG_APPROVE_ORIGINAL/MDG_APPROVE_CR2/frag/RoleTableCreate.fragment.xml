<!-- Fragment to create a Role Table in the Create Scenario -->

<core:FragmentDefinition xmlns="sap.m"
	xmlns:core="sap.ui.core" xmlns:sap.ui.core="sap.ui.core"
	xmlns:sap.ui.layout="sap.ui.layout" xmlns:sap.ui.layout.form="sap.ui.layout.form">
	<Table>
		<headerToolbar>
			<Toolbar>
				<Title text="{i18n>Roles}" class="sapThemeFontSize"></Title>
			</Toolbar>
		</headerToolbar>
		<columns>
			<Column>
				<header>
					<Label text="{i18n>Role}" />
				</header>
			</Column>
			<!-- Extension Point for Role table -->
			<core:ExtensionPoint name="extRoleTable" />
		</columns>
	</Table>
</core:FragmentDefinition>