<!-- Fragment to create a Identification Table in the Create Scenario -->
<core:FragmentDefinition xmlns="sap.m"
	xmlns:core="sap.ui.core" xmlns:sap.ui.core="sap.ui.core"
	xmlns:sap.ui.layout="sap.ui.layout" xmlns:sap.ui.layout.form="sap.ui.layout.form">
	<Table>
		<headerToolbar>
			<Toolbar>
				<Title text="{i18n>Identi}" class="sapThemeFontSize"></Title>
			</Toolbar>
		</headerToolbar>
		<columns>
			<Column mergeDuplicates="true">
				<header>
					<Label text="{i18n>IdentificationType}" />
				</header>
			</Column>

			<Column>
				<header>
					<Label text="{i18n>Identification}" />
				</header>
			</Column>
			<Column>
				<header>
					<Label text="{i18n>ResponsibleInst}" />
				</header>
			</Column>
			<Column minScreenWidth="Tablet" demandPopin="true">
				<header>
					<Label text="{i18n>EntryDate}" />
				</header>
			</Column>
			<Column minScreenWidth="Tablet" demandPopin="true">
				<header>
					<Label text="{i18n>Country}" />
				</header>
			</Column>
			<Column minScreenWidth="Desktop" demandPopin="true">
				<header>
					<Label text="{i18n>CC_REGION}" />
				</header>
			</Column>
			<Column minScreenWidth="Desktop" demandPopin="true">
				<header>
					<Label text="{i18n>PC_VAL_FRM}" />
				</header>
			</Column>
			<Column minScreenWidth="Desktop" demandPopin="true">
				<header>
					<Label text="{i18n>PC_VAL_TO}" />
				</header>
			</Column>
			<!-- Extension Point for Identification table -->
			<core:ExtensionPoint name="extIdentificationTable" />
		</columns>
	</Table>
</core:FragmentDefinition>

